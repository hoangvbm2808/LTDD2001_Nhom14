<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background_top"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GỬI TIN NHẮN CHO CHÚNG TÔI"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/white"
            >
        </TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn có...?"
        android:textStyle="bold"
        android:textSize="24sp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
    </TextView>
    <RadioGroup
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton
            android:padding="15dp"
            android:background="@drawable/custom_radio_selector"
            android:button="@color/white"
            android:text="Câu hỏi"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@drawable/custom_radio_text"
            >

        </RadioButton>
        <RadioButton
            android:padding="15dp"
            android:background="@drawable/custom_radio_selector"
            android:button="@color/white"
            android:text="Lời khen"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@drawable/custom_radio_text"
            android:layout_marginLeft="10dp"
            >

        </RadioButton>
        <RadioButton
            android:padding="15dp"
            android:background="@drawable/custom_radio_selector"
            android:button="@color/white"
            android:text="Phàn nàn"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@drawable/custom_radio_text"
            android:layout_marginLeft="10dp"
            >

        </RadioButton>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Số điện thoại"
            android:gravity="center|left"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/border"
            android:inputType="phone"
            android:maxLength="10">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Họ và tên"
            android:gravity="center|left"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/border"
            android:inputType="text"
            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Địa cỉ email"
            android:gravity="center|left"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/border"
            android:inputType=""
            >
        </EditText>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung liên hệ"
        android:textStyle="bold"
        android:textSize="24sp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
    </TextView>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:counterMaxLength="300"
        app:counterEnabled="true"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:maxLength="300"
            android:background="@drawable/border"
            android:inputType="text"
            android:textSize="18sp"
            >

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMess_complete"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:text="Hoàn thành"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button">
    </androidx.appcompat.widget.AppCompatButton>
</LinearLayout>