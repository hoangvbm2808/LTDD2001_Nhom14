    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ed1c24"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:backgroundTint="#ed1c24"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dip"
            android:minHeight="0dip"
            android:pointerIcon="zoom_in"
            android:textColorLink="#ffffff"
            app:icon="@drawable/baseline_arrow_back_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#ed1c24"
                android:fontFamily="@font/quicksand"
                android:text="ĐÓNG GÓP Ý KIẾN"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:translationX="-40dp" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:fontFamily="@font/quicksand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn có...?"
        android:textStyle="bold"
        android:textSize="23sp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
    </TextView>
    <RadioGroup
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton
            android:fontFamily="@font/quicksand"
            android:padding="15dp"
            android:background="@drawable/custom_radio_selector"
            android:button="@color/white"
            android:text="Câu hỏi"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@drawable/custom_radio_text"
            >

        </RadioButton>
        <RadioButton
            android:fontFamily="@font/quicksand"
            android:padding="15dp"
            android:background="@drawable/custom_radio_selector"
            android:button="@color/white"
            android:text="Lời khen"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@drawable/custom_radio_text"
            android:layout_marginLeft="10dp"
            >

        </RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_radio_selector"
            android:button="@color/white"
            android:fontFamily="@font/quicksand"
            android:padding="15dp"
            android:text="Phàn nàn"
            android:textAlignment="center"
            android:textColor="@drawable/custom_radio_text"
            android:textSize="20dp">

        </RadioButton>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <EditText
            android:fontFamily="@font/be_vietnam_light"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Số điện thoại"
            android:gravity="center|left"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/border"
            android:inputType="phone"
            android:maxLength="10">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">
        <EditText
            android:fontFamily="@font/be_vietnam_light"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Họ và tên"
            android:gravity="center|left"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/border"
            android:inputType="text"
            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">
        <EditText
            android:fontFamily="@font/be_vietnam_light"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Địa cỉ email"
            android:gravity="center|left"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/border"
            android:inputType=""
            >
        </EditText>
    </LinearLayout>
    <TextView
        android:fontFamily="@font/quicksand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung liên hệ"
        android:textStyle="bold"
        android:textSize="24sp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
    </TextView>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:counterMaxLength="300"
        app:counterEnabled="true"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:fontFamily="@font/be_vietnam_light"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:maxLength="300"
            android:background="@drawable/border"
            android:inputType="text"
            android:textSize="18sp"
            >

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:fontFamily="@font/quicksand"
        android:id="@+id/btnMess_complete"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:text="Hoàn thành"
        android:textSize="23sp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button">
    </androidx.appcompat.widget.AppCompatButton>
</LinearLayout>